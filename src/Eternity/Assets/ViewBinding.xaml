<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:dashboardVM="clr-namespace:Eternity.ViewModels.Dashboard"
                    xmlns:home="clr-namespace:Eternity.Views.Home"
                    xmlns:settingsVM="clr-namespace:Eternity.ViewModels.Settings">
    
    <!-- Top Level views -->
    <DataTemplate DataType="{x:Type dashboardVM:DashboardViewModel}">
        <home:DashboardView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type settingsVM:SettingsViewModel}">
        <home:SettingsView />
    </DataTemplate>
    
</ResourceDictionary>