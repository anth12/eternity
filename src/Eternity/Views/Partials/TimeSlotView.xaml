<UserControl x:Class="Eternity.Views.Partials.TimeSlotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Eternity.Views.Partials"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="Grid">
        <StackPanel Background="BlanchedAlmond">
            <Canvas Height="50" Background="CadetBlue"
                Name="Block"
                MouseDown="UIElement_OnMouseDown"
                MouseUp="UIElement_OnMouseUp"
                MouseMove="UIElement_OnMouseMove"
                MouseEnter="Block_OnMouseEnter"
                MouseLeave="Block_OnMouseLeave">
            </Canvas>
            <Canvas Height="80" Background="Coral"></Canvas>
        </StackPanel>
    </Grid>
</UserControl>
